<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ActivityC"
    android:background="@drawable/gradient">

    <ImageButton
        android:id="@+id/imgbtn1"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_above="@+id/answerButton1"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="248dp"
        android:layout_toStartOf="@+id/scoreTextView"
        android:background="@drawable/button"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="128dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/answerButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_toEndOf="@id/answerButton1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/answerButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_toEndOf="@id/answerButton2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/answerButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_toEndOf="@id/answerButton3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="177dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>
